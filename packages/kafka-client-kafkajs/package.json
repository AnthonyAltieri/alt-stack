{
  "name": "@alt-stack/kafka-client-kafkajs",
  "version": "0.1.0",
  "description": "KafkaJS binding for type-safe Kafka client",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest",
    "check-types": "tsc --noEmit"
  },
  "keywords": [
    "kafka",
    "kafkajs",
    "client",
    "typescript",
    "zod"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@alt-stack/kafka-client-core": "workspace:*"
  },
  "peerDependencies": {
    "kafkajs": "^2.0.0",
    "zod": "^3.25.0 || ^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "kafkajs": "^2.0.0",
    "oxlint": "^1.24.0",
    "tsup": "^8.0.0",
    "typescript": "^5.9.2",
    "vitest": "^4.0.3",
    "zod": "^4.0.0"
  }
}
